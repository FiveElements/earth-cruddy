{
  "name": "earth-cruddy",
  "version": "0.0.1",
  "description": "Earth Cruddy layout",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/FiveElements/earth-cruddy.git"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "polymer lint  --no-follow-dependencies  --include-dependencies bower_components/*  --input *.html",
    "analyze": "polymer analyze > analysis.json",
    "dev": "polymer serve -p 8080 | npm run watch",
    "test": "polymer test",
    "dev-install": "npm install -g bower polymer-cli browser-sync",
    "watch": "browser-sync start --proxy localhost:8080 --startPath /components/earth-cruddy/demo/ --files *.html,*.js,demo/*"
  },
  "author": "FiveElements",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.6",
    "gulp": "^3.9.1",
    "proxy-middleware": "^0.15.0"
  }
}
